<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title_right_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_0f0"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:id="@+id/chat_llA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/chat_tvA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部帖子"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <View
                android:id="@+id/chat_viewA"
                android:layout_width="65dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jian_bian" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_llB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/chat_tvB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的帖子"
                android:textColor="@color/color_999"
                android:textSize="16sp" />

            <View
                android:id="@+id/chat_viewB"
                android:layout_width="65dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jian_bian"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_llC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/chat_tvC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的评论"
                android:textColor="@color/color_999"
                android:textSize="16sp" />

            <View
                android:id="@+id/chat_viewC"
                android:layout_width="65dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jian_bian"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_llAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>
