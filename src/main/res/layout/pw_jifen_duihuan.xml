<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80240E0E"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="272dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shi_white_d9"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="272dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shi_white_80"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="272dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shi_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pwJiFenDuiHuan_ivClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingRight="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/all_exit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="党员用户名"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pwJiFenDuiHuan_ivName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="名字"
                    android:textColor="@color/color_333"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="270dp"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@color/line_6e6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在党组织"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pwJiFenDuiHuan_ivZuZhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="aaa"
                    android:textColor="@color/color_333"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="270dp"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@color/line_6e6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     剩余积分"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pwJiFenDuiHuan_ivSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="000"
                    android:textColor="@color/color_333"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/pwJiFenDuiHuan_etInput"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shi_input_0f0"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:paddingLeft="100dp"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_ecf"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pwJiFenDuiHuan_btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/corners_ecf_down_left"
                    android:text="拒绝"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/pwJiFenDuiHuan_btnTrue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/corners_red_down_right"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>