<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title_one_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/function_tvAPPNoteBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载APP操作手册"
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/function_tvAdminNoteBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="下载管理员使用手册"
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="该APP包含以下模块"
                    android:textColor="@color/color_999"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="通知公告："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     发布和查看党委、支部和小组通知。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="学习宣传："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     发布和查看要闻聚焦、学习园地、党员风采。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="组织工作："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     知识问答，组织活动报道。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="纪检工作："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     发布和查看反腐报道、廉洁自律、督促检查。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="青年工作："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     发布和查看读书沙龙、和自愿服务信息。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="工会工作："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     发布和查看乒乓球协会、女工工作、问题活动、关心关爱信息。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="支部天地："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     发布和查看支部活动等信息。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="两学一做："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     包含学习资料、每周一考、知识竞赛、学习心得和学习排名。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="互动交流："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     党员发帖、跟帖和点赞。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="个人空间："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     我的个人信息维护、党费计算器、我的收藏、积分排名。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/line_6e6"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="管理员："
                    android:textColor="@color/color_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="     包含组织管理、权限分配、积分兑换功能。"
                    android:textColor="@color/color_999"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
