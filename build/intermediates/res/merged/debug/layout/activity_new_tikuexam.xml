<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

  <!--<include layout="@layout/include_title_one_text" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/exam_llLeft"
            android:layout_width="15dp"
            android:layout_height="380dp"
            android:layout_marginTop="44dp"
            android:background="#00ff00"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/exam_llRight"
            android:layout_width="15dp"
            android:layout_height="380dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="44dp"
            android:background="#00ff00"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

          <LinearLayout
              android:layout_width="260dp"
              android:layout_height="380dp"
              android:layout_centerHorizontal="true"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="20dp"
              android:background="#1aff6446" />

          &lt;!&ndash;ccFF6446&ndash;&gt;
          <LinearLayout
              android:layout_width="270dp"
              android:layout_height="380dp"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:background="#26ff6446" />

          <LinearLayout
              android:layout_width="290dp"
              android:layout_height="380dp"
              android:layout_centerHorizontal="true"
              android:background="@drawable/shi_btn_red"
              android:orientation="vertical"
              android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/exam_tvSequence"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1"
                  android:textColor="@color/white"
                  android:textSize="16sp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="1dp"
                  android:text="、"
                  android:textColor="@color/white"
                  android:textSize="16sp" />

              <TextView
                  android:id="@+id/exam_tvTitleName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:textSize="16sp" />
            </LinearLayout>

            <com.dangjian.widgets.DotView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/exam_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
          </LinearLayout>
        </RelativeLayout>
      </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="14dp"
          android:gravity="center_horizontal"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总题数："
            android:textColor="@color/color_999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exam_tvTotle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="0"
            android:textColor="@color/color_333"
            android:textSize="16sp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:gravity="center_horizontal|center_vertical"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余时间："
            android:textColor="@color/color_999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exam_tvHour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/input_border"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="时"
            android:textColor="@color/color_999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/exam_tvMinute"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/input_border"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="分"
            android:textColor="@color/color_999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/exam_tvSecond"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/input_border"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="秒"
            android:textColor="@color/color_999"
            android:textSize="14sp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="26dp"
          android:layout_marginTop="20dp"
          android:gravity="bottom|center"
          android:orientation="horizontal">

        <Button
            android:id="@+id/exam_btnUp"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shi_btn_ecf"
            android:text="上一题"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/exam_btnDown"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shi_btn_red"
            android:text="下一题"
            android:textColor="@color/white"
            android:textSize="16sp" />
      </LinearLayout>
    </LinearLayout>
  </ScrollView>-->
</LinearLayout>
